<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="main w-full h-full">
        <div class="containeer w-[100vw] h-[100vh] flex items-center justify-center gap-20">
            <div class="posts w-[90%] h-[90vh] bg-[#F2F4F7] rounded-xl shadow-sm shadow-zinc-900 p-6 flex flex-col gap-4">
                <div class="h-[10%] flex items-center justify-between">
                    <h3 class="text-lg font-semibold tracking-tighter bg-[#F2F4F7]">Posts:</h3>
                    <a class="w-30 h-8 bg-blue-700 text-white rounded-md flex items-center justify-center" href="/profile">Back to Profile</a>
                </div>
                <div class="feed w-full h-full flex flex-col items-center gap-4 overflow-y-scroll">
                    <%if(posts.length > 0){%>
                        <%posts.forEach(post => {%>
                            <div class="box w-[95%] bg-white rounded-md p-4 shadow-sm shadow-zinc-400 flex flex-col gap-4">
                                <div class="info flex items-center justify-between text-sm">
                                    <div class="flex gap-4 items-center">
                                        <div class="w-14 h-14 rounded-full bg-[#F2F4F7] border-1 border-zinc-300">
                                            <%if(post.user.profile_img && post.user.profile_img != "undefined"){%>
                                                <img class="object-contain h-full w-full rounded-full" src="<%=post.user.profile_img%>" alt="User Profile">
                                            <%}else{%>
                                                <img class="object-contain h-full w-full rounded-full" src="https://static.vecteezy.com/system/resources/thumbnails/009/292/244/small_2x/default-avatar-icon-of-social-media-user-vector.jpg">
                                            <%}%>
                                        </div>
                                        <p class="tracking-tighter text-lg"><%=post.user.username%></p>
                                    </div>
                                    <p class="tracking-tighter text-[#606366]"><%=post.date%></p>
                                </div>
                                <div class="content">
                                    <p><%=post.content%></p>
                                </div>
                                <div class="box_footer flex items-center gap-6 pt-6">
                                    <div class="like flex items-center justify-center gap-1">
                                        <a class="<%=post.likes.includes(user._id) ? 'text-blue-700' : 'text-black-800'%> tracking-tighter  font-semibold" href="/like/public/<%=post._id%>">Like</a>
                                        <%if(post.likes.length > 0) {%>
                                            <p>(<%=post.likes.length%>)</p>
                                        <%}%>
                                    </div>
                                </div>
                            </div>
                        <%})%>
                    <%}else{%>
                        <p>No Posts</p>
                    <%}%>
                </div>
            </div>
        </div>
    </div>
    
</body>
</html>